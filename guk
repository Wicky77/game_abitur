                        floor: 1,
                        title: "–ü—Ä–æ—Ö–æ–¥–Ω—ã–µ –±–∞–ª–ª—ã",
                        content: "–ú–∏–Ω–∏–º–∞–ª—å–Ω—ã–µ –±–∞–ª–ª—ã: –ú–∞—Ç–µ–º–∞—Ç–∏–∫–∞ - 65, –§–∏–∑–∏–∫–∞ - 60, –†—É—Å—Å–∫–∏–π - 70"
                    }
                ],
                stairs: []
            }
        };

        // === –ü–ï–†–ï–ú–ï–ù–ù–´–ï ===
        let currentBuilding = '–ì–£–ö';
        let currentFloor = 1;
        let collectedInfo = [];
        let player, canvas, ctx;
        let lastTime = 0;
        let facingRight = true;
        let activeInfoPoint = null;
        let activeStair = null;
        let infoPointImage = new Image();
        let stairsImage = new Image();
         let keys = {};
         let isJumping = false;
        let jumpStartTime = 0;
        let canJump = true;
        let currentCharacter = 'male';

        // === –°–ü–†–ê–ô–¢ –ò–ì–†–û–ö–ê ===
        function createPlayerSprite() {
            const sprite = {
                width: 50,
                height: 67,
                image: new Image()
            };
            sprite.image.src = 'assets/foto/character_m.png';
            return sprite;
        }

        // === –≠–õ–ï–ú–ï–ù–¢–´ –ò–ù–¢–ï–†–§–ï–ô–°–ê ===
        const gameScreen = document.getElementById('game-screen');
        const gameCanvas = document.getElementById('game-canvas');
        const backButton = document.getElementById('back-button');
        const infoModal = document.getElementById('info-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalText = document.getElementById('modal-text');
        const closeModal = document.querySelector('.close-modal');
        const currentFloorSpan = document.getElementById('current-floor');
        const infoList = document.getElementById('info-list');
        const stairsTooltip = document.getElementById('stairs-tooltip');
        const floatingButton = document.getElementById('floating-button');
        const topPopup = document.getElementById('top-popup');
        const closePopup = document.getElementById('close-popup');
        const changeCharacterBtn = document.getElementById('change-character-btn');
        const characterSelectModal = document.getElementById('character-select-modal');
        const closeCharacterModal = document.getElementById('close-character-modal');
        const characterOptions = document.querySelectorAll('.character-option');

        
            // === –£–ü–†–ê–í–õ–ï–ù–ò–ï –í–°–ü–õ–´–í–ê–Æ–©–ò–ú–ò –û–ö–ù–ê–ú–ò ===
        function setupPopupControls() {
            // –û—Ç–∫—Ä—ã—Ç–∏–µ –≤—Å–ø–ª—ã–≤–∞—é—â–µ–≥–æ –æ–∫–Ω–∞
            floatingButton.addEventListener('click', () => {
                topPopup.classList.add('visible');
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –≤—Å–ø–ª—ã–≤–∞—é—â–µ–≥–æ –æ–∫–Ω–∞
            closePopup.addEventListener('click', () => {
                topPopup.classList.remove('visible');
            });

            // –û—Ç–∫—Ä—ã—Ç–∏–µ –æ–∫–Ω–∞ –≤—ã–±–æ—Ä–∞ –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
            changeCharacterBtn.addEventListener('click', () => {
                characterSelectModal.style.display = 'block';
                updateCharacterSelection();
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –æ–∫–Ω–∞ –≤—ã–±–æ—Ä–∞ –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
            closeCharacterModal.addEventListener('click', () => {
                characterSelectModal.style.display = 'none';
            });

            // –í—ã–±–æ—Ä –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
            characterOptions.forEach(option => {
                option.addEventListener('click', () => {
                    const characterType = option.getAttribute('data-character');
                    changeCharacter(characterType);
                });
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –æ–∫–æ–Ω
            document.addEventListener('click', (e) => {
                if (topPopup.classList.contains('visible') &&
                    !topPopup.contains(e.target) &&
                    !floatingButton.contains(e.target)) {
                    topPopup.classList.remove('visible');
                }

                if (characterSelectModal.style.display === 'block' &&
                    !characterSelectModal.contains(e.target) &&
                    !changeCharacterBtn.contains(e.target)) {
                    characterSelectModal.style.display = 'none';
                }
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ Escape
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    if (topPopup.classList.contains('visible')) {
                        topPopup.classList.remove('visible');
                    }
                    if (characterSelectModal.style.display === 'block') {
                        characterSelectModal.style.display = 'none';
                    }
                }
            });
        }

        // === –û–ë–ù–û–í–õ–ï–ù–ò–ï –í–´–ë–û–†–ê –ü–ï–†–°–û–ù–ê–ñ–ê ===
        function updateCharacterSelection() {
            characterOptions.forEach(option => {
                const characterType = option.getAttribute('data-character');
                if (characterType === currentCharacter) {
                    option.classList.add('selected');
                } else {
                    option.classList.remove('selected');
                }
            });
        }

        // === –°–ú–ï–ù–ê –ü–ï–†–°–û–ù–ê–ñ–ê ===
        function changeCharacter(characterType) {
            if (characters[characterType]) {
                currentCharacter = characterType;
                updateCharacterSelection();

                // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø—Ä–∞–π—Ç –∏–≥—Ä–æ–∫–∞
                player.sprite.image.src = characters[characterType].sprite;
                player.width = characters[characterType].width;
                player.height = characters[characterType].height;

                // –ó–∞–∫—Ä—ã–≤–∞–µ–º –æ–∫–Ω–æ –≤—ã–±–æ—Ä–∞ —á–µ—Ä–µ–∑ —Å–µ–∫—É–Ω–¥—É
                setTimeout(() => {
                    characterSelectModal.style.display = 'none';
                }, 500);
            }
        }
         // === –°–û–ó–î–ê–ù–ò–ï –°–ü–†–ê–ô–¢–ê –ò–ì–†–û–ö–ê ===
        function createPlayerSprite() {
            const sprite = {
                width: characters[currentCharacter].width,
                height: characters[currentCharacter].height,
                image: new Image()
            };
            sprite.image.src = characters[currentCharacter].sprite;
            return sprite;
        }
        // === –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò—è ===
        function init() {
            canvas = gameCanvas;
            ctx = canvas.getContext('2d');
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –¥–ª—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã—Ö —Ç–æ—á–µ–∫
            infoPointImage.src = 'assets/foto/skaf.png';
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –¥–ª—è –ª–µ—Å—Ç–Ω–∏—Ü—ã
            stairsImage.src = 'assets/foto/stairs.png';
            
            // –°–æ–∑–¥–∞–µ–º —Å–ø—Ä–∞–π—Ç –∏–≥—Ä–æ–∫–∞
            const playerSprite = createPlayerSprite();
            
            // –°–æ–∑–¥–∞–µ–º –∏–≥—Ä–æ–∫–∞
            player = {
                x: 100,
                y: 450,
                width: playerSprite.width,
                height: playerSprite.height,
                velX: 0,
                velY: 0,
                grounded: false,
                sprite: playerSprite
            };

            // –í–µ—à–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
            setupEventListeners();
            setupPopupControls();
            // –°—Ä–∞–∑—É –∑–∞–ø—É—Å–∫–∞–µ–º –∏–≥—Ä—É
            startGame();
        }

        // === –û–ë–†–ê–ë–û–¢–ß–ò–ö–ò –°–û–ë–´–¢–ò–ô ===
        function setupEventListeners() {
            // –ö–Ω–æ–ø–∫–∞ –Ω–∞–∑–∞–¥
            backButton.style.display = 'none';

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
            closeModal.addEventListener('click', () => {
                infoModal.style.display = 'none';
            });

            // –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –∫–ª–∞–≤–∏–∞—Ç—É—Ä–æ–π
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft' || e.key === 'a') {
                    player.velX = -config.playerSpeed;
                    facingRight = false;
                }
                if (e.key === 'ArrowRight' || e.key === 'd') {
                    player.velX = config.playerSpeed;
                    facingRight = true;
                }
                if ((e.key === 'ArrowUp' || e.key === 'w' || e.key === ' ') && player.grounded) {
                    player.velY = -config.jumpStrength;
                    player.grounded = false;
                }
                
                // –ê–∫—Ç–∏–≤–∞—Ü–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω–æ–π —Ç–æ—á–∫–∏ –∫–ª–∞–≤–∏—à–µ–π F
                if ((e.key === 'f' || e.key === 'F') && activeInfoPoint) {
                    showInfo(activeInfoPoint);
                }
                
                // –í–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏–µ —Å –ª–µ—Å—Ç–Ω–∏—Ü–µ–π
                if ((e.key === 'f' || e.key === 'F') && activeStair) {
                    useStairs();
                }
            });

            document.addEventListener('keyup', (e) => {
                if (e.key === 'ArrowLeft' || e.key === 'a' || e.key === 'ArrowRight' || e.key === 'd') {
                    player.velX = 0;
                }
            });
        }
         // === –û–ë–ù–û–í–õ–ï–ù–ò–ï –£–ü–†–ê–í–õ–ï–ù–ò–Ø ===
        function handleInput() {
            // –î–≤–∏–∂–µ–Ω–∏–µ –≤–ª–µ–≤–æ/–≤–ø—Ä–∞–≤–æ
            if (keys['ArrowLeft'] || keys['a']) {
                player.velX = -config.playerSpeed * (player.grounded ? 1 : config.airControl);
                facingRight = false;
            } else if (keys['ArrowRight'] || keys['d']) {
                player.velX = config.playerSpeed * (player.grounded ? 1 : config.airControl);
                facingRight = true;
            } else {
                // –¢—Ä–µ–Ω–∏–µ –ø—Ä–∏ –¥–≤–∏–∂–µ–Ω–∏–∏ –ø–æ –∑–µ–º–ª–µ
                if (player.grounded) {
                    player.velX *= config.friction;
                    if (Math.abs(player.velX) < 0.5) player.velX = 0;
                }
            }}

            // –£–¥–µ—Ä–∂–∞–Ω–∏–µ –ø—Ä—ã–∂–∫–∞ –¥–ª—è –±–æ–ª–µ–µ –≤—ã—Å–æ–∫–æ–≥–æ –ø—Ä—ã–∂–∫–∞
            if (isJumping && !player.grounded) {
                const jumpTime = performance.now() - jumpStartTime;
                if (jumpTime < config.maxJumpTime) {
                    player.velY = -config.jumpStrength * (1 - jumpTime / config.maxJumpTime);
                }
            }

        // === –û–°–ù–û–í–ù–ê–Ø –ò–ì–†–û–í–ê–Ø –§–£–ù–ö–¶–ò–Ø ===
        function startGame() {
            lastTime = performance.now();
            updateGame();
        }

        function updateGame(currentTime) {
            const deltaTime = currentTime - lastTime;
            lastTime = currentTime;
            
            // –û—á–∏—â–∞–µ–º canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // –û–±–Ω–æ–≤–ª—è–µ–º —Ñ–∏–∑–∏–∫—É
            updatePhysics();

            // –†–∏—Å—É–µ–º –∏–≥—Ä–æ–≤–æ–π –º–∏—Ä
            drawWorld();

            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∫–æ–ª–ª–∏–∑–∏–∏
            checkInteractions();

            // –ó–∞–ø—É—Å–∫–∞–µ–º —Å–ª–µ–¥—É—é—â–∏–π –∫–∞–¥—Ä
            requestAnimationFrame(updateGame);
        }

        function updatePhysics() {
            // –ì—Ä–∞–≤–∏—Ç–∞—Ü–∏—è
            player.velY += config.gravity;
            
            // –î–≤–∏–∂–µ–Ω–∏–µ
            player.x += player.velX;
            player.y += player.velY;

            // –û–≥—Ä–∞–Ω–∏—á–µ–Ω–∏—è –ø–æ –∫—Ä–∞—è–º
            if (player.x < 0) player.x = 0;
            if (player.x > canvas.width - player.width) player.x = canvas.width - player.width;
            
            // "–ü–æ–ª" –¥–ª—è –ø–µ—Ä–≤–æ–≥–æ —ç—Ç–∞–∂–∞
            if (currentFloor === 1 && player.y > canvas.height - player.height - 50) {
                player.y = canvas.height - player.height - 50;
                player.velY = 0;
                player.grounded = true;
            }
            
            // "–ü–æ–ª" –¥–ª—è –≤—Ç–æ—Ä–æ–≥–æ —ç—Ç–∞–∂–∞ (–Ω–µ–≤–∏–¥–∏–º—ã–π, –Ω–∞ –≤—ã—Å–æ—Ç–µ y:405)
            if (currentFloor === 2 && player.y > 405 - player.height) {
                player.y = 405 - player.height;
                player.velY = 0;
                player.grounded = true;
            }
            
            // "–ü–æ–ª" –¥–ª—è —Ç—Ä–µ—Ç—å–µ–≥–æ —ç—Ç–∞–∂–∞ (–Ω–µ–≤–∏–¥–∏–º—ã–π, –Ω–∞ –≤—ã—Å–æ—Ç–µ y:290)
            if (currentFloor === 3 && player.y > 290 - player.height) {
                player.y = 290 - player.height;
                player.velY = 0;
                player.grounded = true;
            }
        }

        function drawWorld() {
            // –†–∏—Å—É–µ–º –ª–µ—Å—Ç–Ω–∏—Ü—ã —Ç–µ–∫—É—â–µ–≥–æ —ç—Ç–∞–∂–∞
            const stairs = buildingInfo[currentBuilding].stairs.filter(stair => stair.floor === currentFloor);
            stairs.forEach(stair => {
                if (stairsImage.complete) {
                    ctx.drawImage(stairsImage, stair.x, stair.y, 140, 140);
                } else {
                    // –ó–∞–ø–∞—Å–Ω–æ–π –≤–∞—Ä–∏–∞–Ω—Ç, –µ—Å–ª–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –Ω–µ –∑–∞–≥—Ä—É–∂–µ–Ω–æ
                    ctx.fillStyle = '#8B4513';
                    ctx.fillRect(stair.x, stair.y, 60, 100);
                    
                    ctx.fillStyle = '#FFF';
                    ctx.font = '12px Arial';
                    ctx.fillText('–õ–µ—Å—Ç–Ω–∏—Ü–∞', stair.x + 5, stair.y + 50);
                }
            });

            // –†–∏—Å—É–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã–µ —Ç–æ—á–∫–∏ —Ç–µ–∫—É—â–µ–≥–æ —ç—Ç–∞–∂–∞
            const points = buildingInfo[currentBuilding].infoPoints.filter(point => point.floor === currentFloor);
            points.forEach(point => {
                if (infoPointImage.complete) {
                    const alpha = activeInfoPoint === point ? 1 : 1;
                    ctx.globalAlpha = alpha;
                    ctx.drawImage(infoPointImage, point.x, point.y, 100, 100);
                    ctx.globalAlpha = 1;
                    
                    if (activeInfoPoint === point) {
                        ctx.fillStyle = '#fff';
                        ctx.font = '15px Arial';
                        ctx.fillText('–ù–∞–∂–º–∏ F', point.x - -20, point.y - -5);
                    }
                } else {
                    const isActive = activeInfoPoint === point;
                    ctx.fillStyle = isActive ? '#f1c40f' : '#f39c12';
                    ctx.fillRect(point.x, point.y, 40, 40);
                    
                    ctx.fillStyle = '#000';
                    ctx.font = 'bold 24px Arial';
                    ctx.fillText('i', point.x + 15, point.y + 27);
                }
            });

            // –†–∏—Å—É–µ–º –∏–≥—Ä–æ–∫–∞
            drawPlayer();

            // –†–∏—Å—É–µ–º –Ω–æ–º–µ—Ä —ç—Ç–∞–∂–∞
            ctx.fillStyle = '#fff';
            ctx.font = '16px Arial';
            ctx.fillText(`–≠—Ç–∞–∂ ${currentFloor} - ${currentBuilding}`, 20, 30);
            
            // –ü–æ–¥—Å–∫–∞–∑–∫–∞ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
            ctx.fillText('‚Üê ‚Üí: –¥–≤–∏–≥–∞—Ç—å—Å—è, Space: –ø—Ä—ã–≥–∞—Ç—å, F: –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–æ–≤–∞—Ç—å', 20, 60);
        }

        function drawPlayer() {
            if (!player.sprite.image.complete) return;
            
            ctx.save();
            
            if (!facingRight) {
                ctx.translate(player.x + player.width, player.y);
                ctx.scale(-1, 1);
                ctx.drawImage(
                    player.sprite.image,
                    0, 0,
                    player.width, player.height,
                    0, 0,
                    player.width, player.height
                );
            } else {
                ctx.drawImage(
                    player.sprite.image,
                    0, 0,
                    player.width, player.height,
                    player.x, player.y,
                    player.width, player.height
                );
            }
            
            ctx.restore();
        }

        function checkInteractions() {
            if (!currentBuilding) return;

            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã–µ —Ç–æ—á–∫–∏
            const points = buildingInfo[currentBuilding].infoPoints.filter(point => point.floor === currentFloor);
            activeInfoPoint = null;
            
            points.forEach(point => {
                if (Math.abs(player.x - point.x) < 50 && Math.abs(player.y - point.y) < 50) {
                    activeInfoPoint = point;
                }
            });
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ª–µ—Å—Ç–Ω–∏—Ü—ã - –ò–°–ü–†–ê–í–õ–ï–ù–ò–ï –ë–ê–ì–ê
            const stairs = buildingInfo[currentBuilding].stairs.filter(stair => stair.floor === currentFloor);
            activeStair = null;
            stairsTooltip.style.display = 'none';
            
            stairs.forEach(stair => {
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–æ–µ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ –∏ –≤–µ—Ä—Ç–∏–∫–∞–ª—å–Ω–æ–µ –ø–æ–ª–æ–∂–µ–Ω–∏–µ
                if (Math.abs(player.x - stair.x) < 50 && Math.abs(player.y - stair.interactionY) < 50) {
                    activeStair = stair;
                    stairsTooltip.style.display = 'block';
                    stairsTooltip.textContent = `–ù–∞–∂–º–∏ F —á—Ç–æ–±—ã ${stair.direction === 'up' ? '–ø–æ–¥–Ω—è—Ç—å—Å—è' : '—Å–ø—É—Å—Ç–∏—Ç—å—Å—è'}`;
                    stairsTooltip.style.left = `${stair.x - 30}px`;
                    stairsTooltip.style.top = `${stair.y - 30}px`;
                }
            });
        }

        function useStairs() {
            if (activeStair) {
                // –¢–µ–ª–µ–ø–æ—Ä—Ç–∏—Ä—É–µ–º –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
                player.x = activeStair.targetX;
                player.y = activeStair.targetY;
                
                // –ú–µ–Ω—è–µ–º —ç—Ç–∞–∂
                currentFloor = activeStair.targetFloor;
                currentFloorSpan.textContent = currentFloor;
                activeStair = null;
            }
        }

        function showInfo(point) {
            if (!collectedInfo.find(info => info.title === point.title)) {
                collectedInfo.push(point);
                infoPointsFound++;
                updateInfoList();
                checkInfoPointAchievement();
            }
            const modalTitle = document.getElementById('modal-title');
            const modalText = document.getElementById('modal-text');

            modalTitle.textContent = point.title;
            modalText.innerHTML = point.content
            infoModal.style.display = 'block';
            const links = modalText.querySelectorAll('a');
            links.forEach(link => {
                link.target = '_blank';
                link.style.color = '#3498db';
                link.style.textDecoration = 'underline';
                link.addEventListener('click', (e) => {
                    e.stopPropagation(); // –ü—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–∞–µ–º –∑–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
                });
            });
            document.getElementById('info-modal').style.display = 'block';
    
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å–æ–¥–µ—Ä–∂–∏—Ç –ª–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è —Å–ø–∏—Å–æ–∫ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤
    if (point.content.includes('–¥–æ–∫—É–º–µ–Ω—Ç—ã:') && !achievements.readDocs.unlocked) {
        unlockAchievement('readDocs');
    }
            }

        function updateInfoList() {
            const infoList = document.getElementById('info-list');
    infoList.innerHTML = '';
    collectedInfo.forEach(info => {
        const li = document.createElement('li');
        
        // –°–æ–∑–¥–∞–µ–º —Å—Å—ã–ª–∫—É –¥–ª—è –∫–∞–∂–¥–æ–≥–æ –ø—É–Ω–∫—Ç–∞
        const link = document.createElement('a');
        link.href = 'javascript:void(0)';
        link.textContent = info.title;
        link.style.color = '#3498db';
        link.style.textDecoration = 'underline';
        link.style.cursor = 'pointer';
        
        link.addEventListener('click', () => {
            showInfo(info);
        });
        
        li.appendChild(link);
        infoList.appendChild(li);
    });
        }

        // –ó–∞–ø—É—Å–∫–∞–µ–º –∏–≥—Ä—É –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        window.addEventListener('load', init);
    </script>
</body>
</html>
