    <script>
    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞ –ø–æ —Å—Å—ã–ª–∫–µ –ø–æ–º–æ—â–∏
        function goToHelp() {
            window.location.href = 'http://localhost:63342/game_for_abitur-master%20(2)/game_for_abitur/project/opros.html?_ijt=rde849qn9bohma07dommv6v1jd&_ij_reload=RELOAD_ON_SAVE';
        }
        const dropdown = document.getElementById('achievementDropdown');
        let isOpen = false;

        // –§—É–Ω–∫—Ü–∏—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –æ–∫–Ω–∞ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–π
        function toggleAchievements() {
            isOpen = !isOpen;
            if (isOpen) {
                dropdown.classList.add('show');
            } else {
                dropdown.classList.remove('show');
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –∑–∞–∫—Ä—ã—Ç–∏—è –æ–∫–Ω–∞ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–π
        function closeAchievements() {
            isOpen = false;
            dropdown.classList.remove('show');
        }

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –æ–∫–Ω–∞
        document.addEventListener('click', function(event) {
            const isButton = event.target.closest('.achievement-btn');
            const isDropdown = event.target.closest('.achievement-dropdown');

            if (!isButton && !isDropdown && isOpen) {
                closeAchievements();
            }
        });

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –Ω–∞–∂–∞—Ç–∏–∏ Escape
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && isOpen) {
                closeAchievements();
            }
        });
    </script>
    <!-- –ö—Ä—É–≥–ª–∞—è –∫–Ω–æ–ø–∫–∞ -->
    <button id="floating-button">‚öôÔ∏è</button>

